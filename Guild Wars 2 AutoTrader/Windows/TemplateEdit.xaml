<Window x:Class="Guild_Wars_2_AutoTrader.Windows.TemplateEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Guild_Wars_2_AutoTrader.Windows"
        mc:Ignorable="d"
        Title="Edit Template File" Height="800" Width="700"
        WindowStartupLocation="CenterScreen" 
        MouseLeftButtonDown="DragWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox Margin="10" Grid.Column="0" Grid.ColumnSpan="4" x:Name="EditTb">
            
        </TextBox>
        <Button Content="Save"
                Grid.Column="0" Grid.Row="1" Margin="10,15,10,15" Click="Save_Click"/>
        <Button Content="Close" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Right" Margin="10,15,10,15" Click="Close_Click"/>
    </Grid>
</Window>
